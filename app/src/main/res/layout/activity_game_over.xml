<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".GameOverActivity">
    <TextView
        android:id="@+id/Gameover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:text="GameOver"
        android:textSize="50sp"
        android:textColor="#f13"
        android:textAlignment="center"

        />
    <Button
        android:id="@+id/play_agian_vtp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Gameover"
        android:layout_centerHorizontal="true"
        android:background="#B2593D"
        android:padding="10dp"
        android:text="Play Agian"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="10sp"
        android:textStyle="bold"


/>
    <TextView
        android:id="@+id/vtpabc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play_agian_vtp"
        android:text="score"
        android:textSize="30sp"
        android:textColor="#131213"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>